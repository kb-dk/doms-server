<lp:linkPatterns xmlns:lp="http://doms.statsbiblioteket.dk/types/linkpattern/0/1/#"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://doms.statsbiblioteket.dk/types/linkpattern/0/1/# linkPatterns.xsd">
    <lp:linkPattern>
        <lp:name>Get DVD file</lp:name>
        <lp:description>Get the DVD file from BTA</lp:description>
        <lp:value>http://statsbiblioteket.dk/BTA/{objectPid}/dvd/{title}</lp:value>
        <lp:replacements>
            <lp:replacement>
                <lp:key>title</lp:key>
                <lp:datastream>PBCORE</lp:datastream>
                <lp:xpath>/PBCoreDescriptionDocument/pbcoreTitle[titleType = 'titel']/title</lp:xpath>
            </lp:replacement>
        </lp:replacements>
    </lp:linkPattern>
</lp:linkPatterns>

